#include <stdio.h>

int main()
{
  //display the coices
	        printf("select your item: \n1. burger\n2. pizza");
	//read their choice 
	int choice=0;
	        scanf("%d",&choice);
	//display their choice
	
	
	switch(choice)
	{
		case 1:
			printf("you selected burger");
			break;
		case 2:
			printf("you selected pizza");
			break;
		default : printf("the number is not in the list");
	}
}
